{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],

    "jsx": "react-jsx",

    "rootDir": "./src",
    "outDir": "./dist",
    "ignoreDeprecations": "6.0",
    "moduleResolution": "Node",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "types": ["node"],

    "baseUrl": "."
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
